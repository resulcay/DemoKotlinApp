<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiten"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/nameSurname"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:layout_marginTop="152dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/hint_text"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColorHint="#4E342E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="screen"
        android:text="@string/button_text"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/nameSurname"
        app:layout_constraintStart_toStartOf="@+id/nameSurname"
        app:layout_constraintTop_toBottomOf="@+id/nameSurname"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/resultField"
        android:layout_width="185dp"
        android:layout_height="34dp"
        android:layout_marginTop="96dp"
        android:background="@color/white"
        android:includeFontPadding="false"
        android:paddingTop="10dp"
        android:text="@string/result_text"
        android:textAlignment="center"
        android:textColor="#4E342E"
        app:layout_constraintEnd_toEndOf="@+id/showDataButton"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/showDataButton"
        app:layout_constraintTop_toBottomOf="@+id/showDataButton" />
</androidx.constraintlayout.widget.ConstraintLayout>